{{ form_start(formWine, {'attr' : {'id': 'form_edit_wine'}}) }}
<div class="modal-header">
    <h5 class="modal-title">Modifier une bouteille</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="form-group">
        {{ form_row(formWine.name) }}
        <div class="row">
            <div class="form-group col-6">
                {{ form_label(formWine.color) }}
                {{ form_widget(formWine.color) }}
            </div>
            <div class="form-group col-6">
                {{ form_label(formWine.origin) }}
                {{ form_widget(formWine.origin) }}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                {{ form_label(formWine.year) }}
                {{ form_widget(formWine.year) }}
            </div>
            <div class="form-group col-6">
                {{ form_label(formWine.dluo) }}
                {{ form_widget(formWine.dluo) }}
            </div>
        </div>
        {{ form_row(formWine.comment) }}
    </div>
</div>
<div class="modal-footer">
    <div class="form-group">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
    </div>
    {{ form_row(formWine.save, {'attr' : {'id': 'form_edit_wine_submit'}}) }}
</div>
{{ form_end(formWine) }}