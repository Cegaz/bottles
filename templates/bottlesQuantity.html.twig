<div data-nb={{ nb }} class="bottles-quantity">
	<div>
		{% if nb > 0 %}
			{% for i in 1..nb %}
		    	<i class="fas fa-wine-bottle pointer"></i>
			{% endfor %}
		{% endif %}
	</div>
	<div>
		{% if nb > 0 %}
			<i class="fas fa-minus-square pointer" onclick="plusMinusBottle($(this), 0)"></i>
		{% endif %}
		<i class="fas fa-plus-square pointer" onclick="plusMinusBottle($(this), 1)"></i>
	</div>
</div>
