<div data-nb={{ nb }} class="bottles-quantity d-flex justify-content-around">
	<div>
		{{ nb }} <i class="fas fa-wine-bottle pointer"></i>
	</div>
	<div class="d-flex flex-column">
		<i class="fas fa-plus-square pointer" onclick="plusMinusBottle($(this), 1)"></i>
		<i class="fas fa-minus-square pointer" onclick="plusMinusBottle($(this), 0)"></i>
	</div>
</div>
