<div>
    <span class="badge badge-secondary m-2 xx-large">{{ wine.nbBottles }}</span>
</div>
<div class="d-flex flex-column justify-content-between xxx-large">
    <i class="fas fa-plus-square pointer" data-quantity="{{ wine.nbBottles }}" onclick="plusMinusBottle($(this), 1)"></i>
    <i class="fas fa-minus-square pointer" data-quantity="{{ wine.nbBottles }}" onclick="plusMinusBottle($(this), 0)"></i>
</div>